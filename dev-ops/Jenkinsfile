#!/usr/bin/env groovy

pipeline {
    agent {
        docker {
          image 'node:14-alpine'
        }
    }
    stages {
        stage('Check Env') {
            steps {
                sh 'node --version'
                sh 'yarn --version'

            }
        }
        stage('Install Deps') {
            steps {
                sh 'yarn'

            }
        }
        stage('Lint') {
            steps {
                echo 'TODO: run linters here'

            }
        }
        stage('Tests') {
            steps {
                sh 'yarn test'
            }
        }
    }
}

