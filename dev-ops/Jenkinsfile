#!/usr/bin/env groovy

pipeline {
    agent {
      docker { image 'node:14-alpine' }
    }
    stages {
        stage('Check env') {
            steps {
                sh 'node --version'
                sh 'yarn --version'
                sh 'ls -alh'
            }
        }
         stage('Install Dependencies') {
            steps {
                sh 'yarn'
            }
        }
    }
}
